<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TriviaGameApp.MainWindow"
        Title="TriviaGameApp">
	<Window.Background>
		<ImageBrush Source="Assets/Background.jpg" Stretch="UniformToFill" />
	</Window.Background>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
		<TextBlock Text="Welcome to C3 REPO's Trivia!" HorizontalAlignment="Center" FontSize="40"/>
		<Button Content="LET'S GO!" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
