<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trivia Night"
        Width="400" Height="200"
        x:Class="TriviaNight.MainWindow">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Welcome to Trivia Night!"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
		<TextBlock Text="Get ready to test your knowledge"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
		<Border BorderBrush="Gold" BorderThickness="2" CornerRadius="5" Padding="5" Margin="0,20,0,0">
			<Button x:Name="StartButton"
                    Content="Start Game"
                    Width="75"
                    Height="20"/>
		</Border>
	</StackPanel>
</Window>
