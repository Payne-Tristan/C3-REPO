<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TriviaNight.MainWindow"
        Title="Trivia Night"
        Width="400" Height="200">

	<Grid>
		<!-- Background image -->
		<Image Source="avares://TriviaGameStuff/Assets/triviahomepic.png"
               Stretch="UniformToFill"
               VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch" />

		<!-- Free layout layer -->
		<Canvas x:Name="MainCanvas">
			<!-- Title Text -->
			<TextBlock Text="Welcome to Trivia Night!"
                       FontSize="24"
                       FontWeight="Bold"
                       Canvas.Left="80"
                       Canvas.Top="10" />

			<TextBlock Text="Get ready to test your knowledge"
                       FontSize="18"
                       Canvas.Left="60"
                       Canvas.Top="45" />

			<!-- Movable Start Button -->
			<Button x:Name="StartButton"
                    Content="Start Game"
                    Width="100"
                    Height="30"
                    Canvas.Left="150"
                    Canvas.Top="100" />
		</Canvas>
	</Grid>
</Window>

